<h1>Create an article </h1>
<h2> The following errors to be cleared </h2>
<% if @article.errors.any? %>
<ul>
<% @article.errors.full_messages.each do |msg| %>
<li> <%=  msg  %> </li>
<%end%>
</ul>
<% end  %>
<%= form_for @article do |i| %>
<p>
  <%= i.label :title %> <br>
  <%= i.text_field :title %>
</p>
<p>
  <%= i.label :description %> <br>
  <%= i.text_area :description %>
</p>
<p>
  <%= i.submit  %>
</p>
<% end %>
